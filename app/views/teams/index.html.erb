<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email address</th>
      <th>Player name 1</th>
      <th>Player name 2</th>
      <th>Payed fee at</th>
      <th>Challonge team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.email_address %></td>
        <td><%= team.player_name_1 %></td>
        <td><%= team.player_name_2 %></td>
        <td><%= team.payed_fee_at %></td>
        <td><%= team.challonge_team_id %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

